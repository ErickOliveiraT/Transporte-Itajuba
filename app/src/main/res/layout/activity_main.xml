<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8A95A5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgHorario"
        android:layout_width="149dp"
        android:layout_height="166dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/horario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgParadas"
        android:layout_width="149dp"
        android:layout_height="166dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="38dp"
        android:src="@drawable/ponto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgMapas"
        android:layout_width="149dp"
        android:layout_height="166dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/mapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHorario" />

    <ImageView
        android:id="@+id/imgRotas"
        android:layout_width="149dp"
        android:layout_height="166dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="38dp"
        android:src="@drawable/rota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgParadas" />

</android.support.constraint.ConstraintLayout>